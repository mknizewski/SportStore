@model SportStore.Web.Models.Client.LoginModel

@{
    ViewBag.Title = "logowanie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-success">
    <div class="panel-body">

        @using (Html.BeginForm(new { returnUrl = ViewBag.ReturnUrl }))
        {
            
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4 style="font-family: 'Open Sans', Arial;">Zaloguj się do serwisu SportStore</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger fade in", @style = "'Open Sans', Arial" })
                <div class="form-group">
                    @Html.LabelFor(model => model.Login, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.ActionLink("Zapomniałem hasło", "ForgotPassword", "Client", new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input type="submit" value="Zaloguj się" class="btn btn-default" />
                    </div>
                </div>
            </div>
            <hr />
        }

        <div class="btn btn-default">
            @Html.ActionLink("Powrót", "Index", "Home")
        </div>

        <script src="~/Scripts/jquery-1.10.2.min.js"></script>
        <script src="~/Scripts/jquery.validate.min.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

        </div>
    </div>
