@model SportStore.Web.Models.Employee.RegisterModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Sport Store - rejestracja pracownika</title>
    <link rel="shortcut icon" href="~/Content/Images/favicon.ico" />
    <link rel="stylesheet" href="~/Content/Css/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/Css/bootstrap-theme.css">
    <link rel="stylesheet" href="~/Content/Css/bootstrap-glyphicons.css" />
    <link rel="stylesheet" href="~/Content/validation.css" type="text/css" />
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Open+Sans:400,800,300,700&amp;subset=latin-ext" />
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Playfair+Display:400,400italic,700,700italic,900,900italic&amp;subset=latin-ext" />
    <script src="http://code.jquery.com/jquery-latest.min.js" type="text/javascript"></script>
    <script src="~/Scripts/menu_script.js"></script>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/jquery-2.1.4.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <div id="register" class="panel panel-primary">

        <div class="panel-heading">Rejestracja</div>
        <div class="panel-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger col-sm-12", @style = "'Open Sans', Arial" })
                <div class="form-horizontal">
                    <div class="form-group">
                        <label for="Name" class="col-md-2">Imię:</label>
                        <div class="col-md-10">
                            @Html.EditorFor(x => x.Name, new { htmlAttributes = new { @class = "form-control", @id = "Name" } })
                            <span class="help-block">Wpisz imię</span>
                            @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-horizontal">
                    <div class="form-group">
                        <label for="Surname" class="col-md-2">Nazwisko:</label>
                        <div class="col-md-10">
                            @Html.EditorFor(x => x.Surname, new { htmlAttributes = new { @class = "form-control", @id = "Surname" } })
                            <span class="help-block">Wpisz nazwisko</span>
                            @Html.ValidationMessageFor(x => x.Surname, "", new { @class = "text-daneger" })
                        </div>
                    </div>
                </div>

                <div class="form-horizontal">
                    <div class="form-group">
                        <label for="Login" class="col-md-2">Login:</label>
                        <div class="col-md-10">
                            <div class="input-group">
                                @Html.EditorFor(x => x.Login, new { htmlAttributes = new { @class = "form-control" }, @id = "Login" })
                                <div class="input-group-addon">@@SportStore.pl</div>
                            </div>
                            <span class="help-block">Wpisz login:</span>
                            @Html.ValidationMessageFor(x => x.Login, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-horizontal">
                    <div class="form-group">
                        <label for="Password" class="col-md-2">Hasło:</label>
                        <div class="col-md-10">
                            @Html.EditorFor(x => x.Password, new { htmlAttributes = new { @class = "form-control", @id = "Password" } })
                            <span class="help-block">Wpisz hasło:</span>
                            @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-horizontal">
                    <div class="form-group">
                        <label for="ConfirmPassword" class="col-md-2">Powtórz hasło:</label>
                        <div class="col-md-10">
                            @Html.EditorFor(x => x.RepeatPassword, new { htmlAttributes = new { @class = "form-control", @id = "ConfirmPassword" } })
                            <span class="help-block">Powtórz hasło:</span>
                            @Html.ValidationMessageFor(x => x.RepeatPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-horizontal">
                    <div class="form-group">
                        <label for="Code" class="col-md-2">Kod rejestracyjny:</label>
                        <div class="col-md-10">
                            @Html.EditorFor(x => x.RegisterKey, new { htmlAttributes = new { @class = "form-control", @id = "Code" } })
                            <span class="help-block">Twój kod rejestracyjny</span>
                            @Html.ValidationMessageFor(x => x.RegisterKey, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <input type="submit" value="Rejestruj się" class="btn btn-success" />
                <a href='@Url.Action("Login")' class="btn btn-primary">Powrót</a>
            }
        </div>
    </div>
</body>
</html>

<style>
    #register {
        position: absolute;
        width: 40%;
        left: 30%;
        top: 10%;
    }
</style>